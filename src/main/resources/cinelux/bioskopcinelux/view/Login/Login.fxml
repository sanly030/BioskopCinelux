<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="rootPane" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cinelux.bioskopcinelux.controller.login.LoginCtrl">
   <children>
      <ImageView fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../asset/image/TampilanLogin.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfUsername" layoutX="400.0" layoutY="467.0" prefHeight="33.0" prefWidth="376.0" style="-fx-background-color: #FFFFFF;" />
      <PasswordField fx:id="tfHidePassword" layoutX="400.0" layoutY="597.0" prefHeight="33.0" prefWidth="314.0" style="-fx-background-color: #FFFFFF;" />
      <TextField fx:id="tfUnhidePassword" layoutX="400.0" layoutY="597.0" prefHeight="33.0" prefWidth="314.0" style="-fx-background-color: #FFFFFF;" />
      <ImageView fx:id="eyeIcon" fitHeight="33.0" fitWidth="37.0" layoutX="737.0" layoutY="596.0" onMouseClicked="#unhidePassClick" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../asset/image/show.png" />
         </image>
      </ImageView>
      <Button fx:id="btnMasuk" layoutX="454.0" layoutY="725.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="67.0" prefWidth="233.0" styleClass="exit-button" stylesheets="@../../style/button.css" text="Enter" />
   </children>
</AnchorPane>
